{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "paths": {
      "@services": ["src/services"],
      "@types": ["src/types"],
      "@infra": ["src/infra"],
      "@domain": ["src/domain"],
      "@utils": ["src/utils"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
